<p style="color: green"><%= notice %></p>

<h1>Games</h1>
<%= link_to "New game", new_game_path %>

<div id="games">
       
    <p>
  <% @games.each do |game| %>
      <% if game.cover.attached? %>
      <%= image_tag game.cover%>
      <% end %>
      <p>
      <%= game.name %>
      </p>
      <p>
      <%= game.summary %>
      </p>
      <p>
      <%= game.release_date %>
      </p>
      <p>
      <%= game.category %>
      </p>
      <p>
      <%= game.rating %>
      </p>
      <p>
      <%= link_to "Show", game %>
    </p>
    <p>
    <%= link_to 'Edit', edit_game_path(game) %>
    </p>
    <p>
    <%= link_to 'Destroy', game, data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' } %>
    </p>
    <p>
    <%= game.critics.size%> Critics
    </p>
  <% end %>
</div>

